<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@owarai) do |f| %>
        <div class="form-group">
          <%= f.file_field :image %>
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'ネタ見せ', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'owarais/owarais', owarais: @owarais %>
    </div>
  </div>
<% else %>  
<div class="center jumbotron">
  <div class="text-center">
    <h1>お笑い選手権</h1>
    <%= link_to 'ほな、いこか!', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>
<% end %>